model AstrologicalProfile {
  id                  String             @id @default(uuid())
  birth_date           String?            @map("birth_date")           // Optional birth_date
  birth_time           String?            @map("birth_time")           // Optional birth_time
  birth_location       String?            @map("birth_location")       // Optional birth_location
  western_sign         String?            @map("western_sign")         // Optional western_sign
  chinese_sign         String?            @map("chinese_sign")         // Optional chinese_sign
  
  // store entire `result` as JSON (matches incoming payload)
  result              Json?              @map("result")
  // store the roadmap overview JSON blob from incoming payload
  roadmap_overview     Json?              @map("roadmap_overview")
  userId              String?            @unique
  user                User?              @relation(fields: [userId], references: [id])

}
